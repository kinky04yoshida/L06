<% if @product.errors.present? %>
    <p>エラーがあります。</p>
    <ul>
        <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>
<h1>新規商品登録</h1>
<%= form_for @product, url: {action: :create} do |f| %>
    <%= f.label :name, '商品名' %><br>
    <%= f.text_field :name %><br>
    <%= f.label :price, '価格' %><br>
    <%= f.text_field :price %><br>
    <p><%= f.submit '登録' %></p>
<% end %>